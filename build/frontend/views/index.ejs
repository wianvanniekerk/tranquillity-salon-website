<%- include('partials/header', { title: 'Tranquillity' }) %>
<style>
  .bg-image {
    background-image: url('https://res.cloudinary.com/daiaxqvvr/image/upload/v1721741522/back1_apge37.jpg');
    background-size: cover;
    background-position: center;
    opacity: 0;
    transition: opacity 1.5s ease-in-out, transform 1.5s ease-in-out;
    transform: scale(1.05);
  }
  .bg-loaded {
    opacity: 1;
    transform: scale(1);
  }
</style>
<script>
  document.addEventListener('DOMContentLoaded', () => {
    const bgImage = document.querySelector('.bg-image');
    const img = new Image();
    img.src = getComputedStyle(bgImage).backgroundImage.slice(4, -1).replace(/['"]/g, '');
    img.onload = () => {
      bgImage.classList.add('bg-loaded');
    };
  });
</script>
