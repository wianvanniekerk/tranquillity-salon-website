<%- include('../partials/header', { title: 'Tranquillity - Forgot Password' }) %>
<div class="bg-gray-100 py-8">
  <div class="container mx-auto px-4 lg:px-8">
    <div class="max-w-md mx-auto bg-white rounded-lg shadow-md overflow-hidden">
      <div class="px-6 py-4 bg-gradient-to-r from-teal-400 to-teal-500 text-white">
        <h1 class="text-2xl font-bold">Forgot Password</h1>
      </div>
      <div class="p-6">
        <% if (locals.errorMessage) { %>
          <div class="mb-4 p-4 bg-red-100 text-red-700 border border-red-400 rounded">
            <%= errorMessage %>
          </div>
        <% } %>
        <% if (locals.successMessage) { %>
          <div class="mb-4 p-4 bg-green-100 text-green-700 border border-green-400 rounded">
            <%= successMessage %>
          </div>
        <% } %>
        <form action="/user/forgot-password" method="POST">
          <div class="mb-4">
            <label for="email" class="block text-gray-700 font-semibold mb-2">Email</label>
            <input type="email" name="email" id="email" required
              class="w-full p-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-teal-600 focus:border-transparent">
          </div>
          <button type="submit"
            class="w-full bg-teal-600 hover:bg-teal-700 text-white font-bold py-2 px-4 rounded transition duration-300 focus:outline-none focus:ring-2 focus:ring-teal-400 focus:ring-opacity-50">
            Send Reset Link
          </button>
        </form>
      </div>
    </div>
  </div>
</div>
<%- include('../partials/footer') %>